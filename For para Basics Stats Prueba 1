for i in range(len(data['data'])):
    #fecha.append(data['data'][i]['date'])
    fecha.append(data['data'][i]['date'])
    avg.append(data['data'][i]['avg'])
    maxi.append(data['data'][i]['max'])
    mini.append(data['data'][i]['min'])
    std.append(data['data'][i]['std'])
